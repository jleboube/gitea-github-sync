# Gitea Configuration
GITEA_URL=https://your-gitea-server.com
GITEA_TOKEN=your_gitea_access_token

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token

# Sync Thresholds
SYNC_THRESHOLD_BUILDS=5      # Number of successful builds before auto-sync
SYNC_THRESHOLD_HOURS=48      # Hours since last sync before auto-sync

# Webhook Configuration
WEBHOOK_PORT=3000
WEBHOOK_SECRET=your_webhook_secret_here

# Logging
LOG_LEVEL=info  # debug, info, warn, error